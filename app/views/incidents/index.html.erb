<h1>Listing incidents</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Severity</th>
    <th>Number of Patients</th>
    <th>Description</th>
  </tr>

<% for incident in @incidents %>
  <tr>
    <td><%=h incident.location %></td>
    <td><%=h incident.severity %></td>
    <td><%=h incident.number_patients %></td>
    <td><%=h incident.description %></td>
    <td><%= link_to 'Show', incident %></td>
    <td><%= link_to 'Edit', edit_incident_path(incident) %></td>
    <td><%= link_to 'Close', close_incident_path(incident), :confirm => 'Close this incident?', :method => :put %></td>
  </tr>
<% end %>
</table>

