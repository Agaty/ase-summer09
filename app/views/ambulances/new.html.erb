<h1>New ambulance</h1>

<%= error_messages_for :ambulance %>

<% form_for(@ambulance) do |f| %>
  <p>
    <b>Registration #</b><br />
    <%= f.text_field :registration_number %>
  </p>

  <p>
    <b>Driver Name</b><br />
    <%= f.text_field :driver_name %>
  </p>

  <p>
    <b>Initial Location</b><br />
    <%= f.text_field :location %>
  </p>

  <p>
    <b>Initial Availability</b><br />
      <%= select_tag("ambulance[availability_id]", "<option>Select Availability</option>" + options_from_collection_for_select(@availabilities, :id, :description)) %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', ambulances_path %>
